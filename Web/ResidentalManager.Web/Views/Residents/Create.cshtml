@model ResidentalManager.Web.ViewModels.Residents.CreateResidentsInputModel
@{ ViewData["Title"] = "Residents";}
@using ResidentalManager.Data.Models.Enum
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1 class="col-md-6 offset-md-3">Create New Resident</h1>

<form method="post" class="col-md-6 offset-md-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="@Model.FirstName"></label>
            <input asp-for="@Model.FirstName" class="form-control">
            <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="@Model.MiddleName"></label>
            <input asp-for="@Model.MiddleName" class="form-control">
            <span asp-validation-for="@Model.MiddleName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="@Model.LastName"></label>
            <input asp-for="@Model.LastName" class="form-control">
            <span asp-validation-for="@Model.LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-5">
            <label asp-for="@Model.Email"></label>
            <input asp-for="@Model.Email" class="form-control">
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.Telephone"></label>
            <input asp-for="@Model.Telephone" class="form-control">
            <span asp-validation-for="@Model.Telephone" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="@Model.DateOfBirth"></label>
            <input asp-for="@Model.DateOfBirth" class="form-control">
            <span asp-validation-for="@Model.DateOfBirth" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Gender"></label>
            <div>
                <select asp-for="@Model.Gender" class="form-control"
                        asp-items="@Html.GetEnumSelectList<Gender>()">
                </select>
            </div>
            <span asp-validation-for="@Model.Gender" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.ResidentType"></label>
            <div>
                <select asp-for="@Model.ResidentType" class="form-control"
                        asp-items="@Html.GetEnumSelectList<ResidentType>()">
                </select>
            </div>
            <span asp-validation-for="@Model.ResidentType" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Fee" class="col-md-12"></label>
            <div class="form-group">
                <select asp-for="@Model.FeeId" class="form-control"
                        asp-items="@(new SelectList(Model.Fee,"Id","Name"))"></select>

                <span asp-validation-for="@Model.Fee" class="text-danger"></span>
            </div>

        </div>
        <div>
            <input asp-for="@Model.PropertyId" type="hidden" />
        </div>
    </div>


    <div class="form-row">
        <div>
            <a href="/Properties_/All?RealEstateId=@ViewBag.realEstateId" ]" class="btn btn-primary">Go Back</a>

            <input type="submit" class="btn btn-primary" value="Create" />
        </div>
    </div>
</form>

@section PropertyLinks {
    <li class="nav-item">
        <a class="nav-link text-dark" href="/Fees/All?realEstateId=@ViewBag.realEstateId">Fees</a>
    </li>
    <li class="nav nav-pills">
        <a class="nav-link text-info border" href="/Properties_/All?realEstateId=@ViewBag.realEstateId">Properties</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" href="/Expences/All?realEstateId=@ViewBag.realEstateId">Expences</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" href="/Taxes/All?realEstateId=@ViewBag.realEstateId">Taxes</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" href="/Reports/Index?realEstateId=@ViewBag.realEstateId">Reports</a>
    </li>
}