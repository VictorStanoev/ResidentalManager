@model ResidentalManager.Web.ViewModels.Expences.CreateExpencesInputModel
@using ResidentalManager.Data.Models.Enum
@{ ViewData["Title"] = "Expences";}

<h1 class="text-center">Create New RealEstate Expence</h1>

<form method="post" class="col-md-6 offset-md-3">
    <div asp-validation-summary="All"></div>
    <div class="form-row col-md-12">
        <div class="form-group col-md-4">
            <label asp-for="@Model.Month"></label>
            <div>
                <select asp-for="@Model.Month" class="form-control"
                        asp-items="@Html.GetEnumSelectList<Month>()">
                </select>
            </div>
            <span asp-validation-for="@Model.Month" class="text-danger"></span>
        </div>

        <div class="form-group col-md-4">
            <label asp-for="@Model.Year"></label>
            <input asp-for="@Model.Year" class="form-control" value="@DateTime.UtcNow.Year">
            <span asp-validation-for="@Model.Year" class="text-danger"></span>
        </div>

        <div class="form-group col-md-4">
            <label asp-for="@Model.Amount"></label>
            <input asp-for="@Model.Amount" class="form-control">
            <span asp-validation-for="@Model.Amount" class="text-danger"></span>
        </div>

    </div>

    <div class="form-group col-md-12">
        <label asp-for="@Model.ExpenceType"></label>
        <div>
            <select asp-for="@Model.ExpenceType" class="form-control"
                    asp-items="@Html.GetEnumSelectList<ExpenceType>()">
            </select>
        </div>
        <span asp-validation-for="@Model.ExpenceType" class="text-danger"></span>
    </div>

    <div>
        <div class="form-group col-md-12">
            <label asp-for="@Model.Description"></label>
            <textarea asp-for="@Model.Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="@Model.Description" class="text-danger"></span>

            <input asp-for="@Model.RealEstateId" type="hidden" value="@ViewBag.realEstateId" />
        </div>
    </div>

    <div class="form-row">
        <div>
            <a href="/Expences/All?realEstateId=@ViewBag.realEstateId" class="btn btn-primary">Go Back</a>

            <input type="submit" class="btn btn-primary" value="Create" />
        </div>
    </div>
</form>

@section PropertyLinks {
    <li class="nav-item">
        <a class="nav-link text-dark" href="/Fees/All?realEstateId=@ViewBag.realEstateId">Fees</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" href="/Properties_/All?realEstateId=@ViewBag.realEstateId">Properties</a>
    </li>
    <li class="nav nav-pills">
        <a class="nav-link text-info border" href="/Expences/All?realEstateId=@ViewBag.realEstateId">Expences</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" href="/Taxes/All?realEstateId=@ViewBag.realEstateId">Taxes</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" href="/Reports/Index?realEstateId=@ViewBag.realEstateId">Reports</a>
    </li>
}