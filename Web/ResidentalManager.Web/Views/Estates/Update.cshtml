@model ResidentalManager.Web.ViewModels.Estates.AllEstatesViewModel
<h1 class="col-md-6 offset-md-3" >Update "@Model.Name" Estate</h1>

<form method="post" class="col-md-6 offset-md-3">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <input asp-for="@Model.Name" class="form-control" value="@Model.Name">
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Region"></label>
            <input asp-for="@Model.Region" class="form-control" value="@Model.Region">
            <span asp-validation-for="@Model.Region" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Municipality"></label>
            <input asp-for="@Model.Municipality" class="form-control" value="@Model.Municipality">
            <span asp-validation-for="@Model.Municipality" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-8">
            <label asp-for="@Model.Town"></label>
            <input asp-for="@Model.Town" class="form-control" value="@Model.Town">
            <span asp-validation-for="@Model.Town" class="text-danger" ></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="@Model.PostCode"></label>
            <input asp-for="@Model.PostCode" class="form-control" value="@Model.PostCode">
            <span asp-validation-for="@Model.PostCode" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ResidentalArea"></label>
        <input asp-for="@Model.ResidentalArea" class="form-control" value="@Model.ResidentalArea">
        <span asp-validation-for="@Model.ResidentalArea" class="text-danger"></span>
    </div>
    <div class="form-row">
        <div class="form-group col-md-8">
            <label asp-for="@Model.StreetName"></label>
            <input asp-for="@Model.StreetName" class="form-control" value="@Model.StreetName">
            <span asp-validation-for="@Model.StreetName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="@Model.StreetNumber"></label>
            <input asp-for="@Model.StreetNumber" class="form-control" value="@Model.StreetNumber">
            <span asp-validation-for="@Model.StreetNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.BuildingNumber"></label>
            <input asp-for="@Model.BuildingNumber" class="form-control" value="@Model.BuildingNumber">
            <span asp-validation-for="@Model.BuildingNumber" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="@Model.EntranceNumber"></label>
            <input asp-for="@Model.EntranceNumber" class="form-control" value="@Model.EntranceNumber">
            <span asp-validation-for="@Model.EntranceNumber" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="@Model.Floors"></label>
            <input asp-for="@Model.Floors" class="form-control" value="@Model.Floors">
            <span asp-validation-for="@Model.Floors" class="text-danger"></span>
        </div>
    </div>
    <div class="form-check form-check-inline">
        <input asp-for="@Model.Attics" class="form-check-input" type="checkbox">
        <label asp-for="@Model.Attics"></label>
    </div>
    <div class="form-check form-check-inline">
        <input asp-for="@Model.Basements" class="form-check-input">
        <label asp-for="@Model.Basements"></label>
    </div>
    <div class="form-check form-check-inline">
        <input asp-for="@Model.Elevator" class="form-check-input">
        <label asp-for="@Model.Elevator"></label>
    </div>
    <div class="form-check form-check-inline">
        <input asp-for="@Model.Garages" class="form-check-input">
        <label asp-for="@Model.Garages"></label>
    </div>

    <div class="col-md-6 offset-md-10">
        <input type="submit" class="btn btn-primary" value="Update" />
    </div>
</form>